<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragmentPendingReq">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/layItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="5"
                app:rowCount="1">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_column="0"
                    app:layout_row="0"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginHorizontal="6dp"
                            android:gravity="center"
                            android:text="Withdrawal Request Date"
                            android:textColor="@color/SecondaryVariant"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="1dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/gray"/>
                    </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_column="1"
                    app:layout_row="0"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginHorizontal="6dp"
                            android:gravity="center"
                            android:text="OLD Balance"
                            android:textColor="@color/SecondaryVariant"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="1dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/gray"/>
                    </RelativeLayout>



                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_column="2"
                    app:layout_row="0"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="Withdrawal Request Balance"
                        android:textColor="@color/SecondaryVariant"
                        android:textSize="10sp"
                        android:textStyle="bold" />



                </RelativeLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_column="3"
                    app:layout_row="0"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="1dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:background="@color/gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Approval date"
                            android:textColor="@color/SecondaryVariant"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="1dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/gray"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_column="4"
                    app:layout_row="0"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="4dp"
                        android:gravity="center"
                        android:text="New Balance"
                        android:textColor="@color/SecondaryVariant"
                        android:textSize="10sp"
                        android:textStyle="bold" />



                </RelativeLayout>

            </androidx.gridlayout.widget.GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvWithdrawPending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <!-- TODO: Update blank fragment layout -->


</FrameLayout>