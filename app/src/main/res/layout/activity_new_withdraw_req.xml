<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:orientation="vertical"
    tools:context=".ui.ActivityNewWithdrawReq">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:text="Select account for withdraw"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/secondary_m"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/v1">

        <RelativeLayout
            android:id="@+id/layInvestorAccountSelect"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvBankName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:text="Bank Name"/>


                <TextView
                    android:id="@+id/tvAccountTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Tittle"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/SecondaryVariant"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvAccountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000000000000000"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/SecondaryVariant"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_arrow_drop_down_24"
                android:tint="@color/primary" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newAccount"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="addAccountDialog"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:text="Your Registered Phone Number"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/baseline_check_circle_24"/>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/secondary_m"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/v1">

        <RelativeLayout
            android:id="@+id/layItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                   android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+923006023648"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="15dp"
                    android:textColor="@color/SecondaryVariant"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:text="Enter your withdraw amount"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/secondary_m"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/v1">

        <RelativeLayout
            android:id="@+id/layBalance"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:gravity="top"
                    android:paddingTop="5dp"
                    android:text="Rs."
                    android:textColor="@color/SecondaryVariant"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                android:tint="@color/primary" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnWithdraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
        android:drawableTint="@color/white"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:background="@drawable/bg_button"
        android:text="Withdraw" />




</LinearLayout>